@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/favicon.ico">

    <title>Demo</title>

    @Styles.Render("~/Bundles/base/css")

    @Styles.Render("~/Bundles/metronic/css")

    @Styles.Render("~/Bundles/css")


    <!-- View specific styles -->
    @RenderSection("styles", required: false)
   

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->
    <style>

        .page-container .page-sidebar-wrapper {
    height:0px;
}
    </style>
</head>
<body class="page-boxed page-header-fixed page-sidebar-closed-hide-logo page-container-bg-solid page-sidebar-closed-hide-logo">
    <div class="page-header navbar navbar-fixed-top">
        @Html.Partial("_Header");
    </div>
    <div class="clearfix">
    </div>
    <div class="container">
        <div class="page-container">
            <!--左侧菜单-->
            <div class="page-sidebar-wrapper">
                @Html.Partial("_Slider");
            </div>
            <!--右侧内容-->
            <div class="page-content-wrapper">
               @RenderBody();
            </div>
        </div>
        <!--底部-->
        <div class="page-footer">
            <div class="page-footer-inner">
                2014 &copy; Metronic by keenthemes. <a href="http://themeforest.net/item/metronic-responsive-admin-dashboard-template/4021469?ref=keenthemes" title="Purchase Metronic just for 27$ and get lifetime updates for free" target="_blank">Purchase Metronic!</a>
            </div>
            <div class="scroll-to-top">
                <i class="icon-arrow-up"></i>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Bundles/libs/js")
    @Scripts.Render("~/Bundles/metronic/js")

    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
    <script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

   

    <!-- View specific scripts -->
    @RenderSection("scripts", required: false)

    <script>
        jQuery(document).ready(function() {
           Metronic.init(); // init metronic core componets
           Layout.init(); // init layout
           QuickSidebar.init(); // init quick sidebar
           Demo.init(); // init demo features

        });
        
    </script>
</body>
</html>
