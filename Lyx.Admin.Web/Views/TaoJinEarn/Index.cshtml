@using Abp.Web.Mvc.Extensions
@{
    ViewBag.ActiveMenu = "TaoJinEarn";
}
@section styles{
    @Html.IncludeStyle("~/Scripts/bootstrap-table/bootstrap-table.css")
}
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    @*<h3 class="page-title">
            Basic Datatables <small>basic datatable samples</small>
        </h3>*@

    <div class="page-top-bar">
        <ul class="page-left">
            <li>
                <div class="md-checkbox">
                    <input type="checkbox" id="chkIsOpen" class="md-check">
                    <label for="chkIsOpen">
                        <span></span>
                        <span class="check"></span>
                        <span class="box"></span>
                        自动更新
                    </label>
                </div>
            </li>
        </ul>
        <div class="page-toolbar">
            <button id="btnAddFruit" data-target="#CreateFruitModal" data-toggle="modal" class="btn blue" >创建水果类型</button>
        </div>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <!--搜索-->
            <div id="tb_fruit_toolbar" style="display:inline-flex;">
                @*<input type="text" class="form-control" placeholder="输入水果名" />&nbsp;
                <div class="btn-group">
                    <button id="btn_add" type="button" class="btn blue">搜索</button>
                </div>*@
            </div>
            <table id="tb_fruits">
            </table>
        </div>
    </div>

</div>
<div class="modal fade" id="CreateFruitModal" tabindex="-1" role="dialog" aria-labelledby="CreateFruitModal" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="novelForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>@L("CreateFruitModal")</span>
                        <span style="display:none;">@L("UpdateFruitModal")</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group" style="display:none;">
                        <input id="Id" type="text" name="Id" >
                    </div>
                    <div class="form-group">
                        <label>@L("FruitName")</label>
                        <input class="form-control" type="text" name="FruitName" required maxlength="10" minlength="2">
                    </div>
                    <div class="form-group">
                        <label>@L("FruitCode")</label>
                        <input class="form-control" type="text" name="FruitCode">
                    </div>
                    <div class="form-group">
                        <label>@L("Order")</label>
                        <input class="form-control" type="text" name="Order">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                    <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @Html.IncludeScript(ScriptPaths.JQuery_Validation);
    @Html.IncludeScript("~/Scripts/bootstrap-table/bootstrap-table.js")
    @Html.IncludeScript("~/Scripts/bootstrap-table/locale/bootstrap-table-zh-CN.js")
    @Html.IncludeScript("~/Scripts/jquery-timer/jquery.timer.js")
    @Html.IncludeScript("~/Views/TaoJinEarn/Index.js");
}